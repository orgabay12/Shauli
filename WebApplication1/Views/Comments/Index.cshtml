@model IEnumerable<WebApplication1.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2> @(Model.Count() > 0 ? Model.FirstOrDefault().Post.Title : "") Comments</h2>


<div>
    @using (Html.BeginForm("Index", "Comments",FormMethod.Get, new { @id = "search" }))
    {
    <p>
        Author Name: @Html.TextBox("author", "", new { @class = "form-control" })
        <input type="submit" class="btn btn-default" value="Filter" />
    </p>
    }
</div>
<table class="table">
    <tr>
        <th>
            Post Title
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Post.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
